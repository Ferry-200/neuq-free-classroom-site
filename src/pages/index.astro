  "08:50 ~ 09:35",
  "10:05 ~ 10:50",
  "10:55 ~ 11:40",
  "14:00 ~ 14:45",
  "14:50 ~ 15:35",
  "16:05 ~ 16:50",
  "16:55 ~ 17:40",
  "18:40 ~ 19:25",
  "19:30 ~ 20:15",
  "20:25 ~ 21:10",
  "21:15 ~ 22:00",
];

const lessonType = {
  1: "morning",
  2: "morning",
  3: "morning",
