    .sort((a, b) => a!.lesson - b!.lesson);

/** 1-8 èŠ‚å¯ç”¨çš„æ•™å®¤ */
const allDayFree = dataList
  .slice(0, 8)
  .map((value) => value.classrooms)
  .reduce((prev, curr) => {
    if (!prev) return curr;
    return new Set([...prev].filter(x => curr.has(x)));
